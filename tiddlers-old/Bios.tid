<$let by-last="[{!!last-name}] [{!!first-name}] +[join[, ]]">
<hr/>
<$list filter="[all[tiddlers]tag[Person]] :filter[has[text]] +[sortsub:string<by-last>]">
  <h2><$link /></h2>
  <$list filter="[<currentTiddler>has[avatar]" variable="_">
  <div class="avatar"><$image source={{{ [<currentTiddler>get[avatar]] }}} /></div>
  </$list>
  <$transclude mode="block"/>
  <hr/>
</$list>
