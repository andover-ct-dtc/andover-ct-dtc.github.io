table.zebra {
  tr:nth-child(odd) {background-color: <<colour page-background>>;}
}
.multi {
  ul {list-style: none; margin-block-start: 0; padding-inline-start: 1em;}
  &.col12 {column-width: 12em;}
  &.col16 {column-width: 16em;}
}
.short-number {width: 4em; border: .2em solid <<colour modal-footer-border>>;}
table.multi {
  td[colspan="5"] {background: #0000ff33; font-size: 150%; font-weight: 600; padding: 1em 1em .5em;}
}

table.postcards {
  td.voters {
    font-size: 90%;
    ul {column-count: 2; list-style: none;}
  }
}

.circled {
  display: inline-block;
  width: fit-content;
  min-width: 2rem;
  padding: 0.5rem;
  align-items: center;  
  justify-content: center;
  aspect-ratio: 1 / 1;
  border-radius: 50%;  
  color: white;
}